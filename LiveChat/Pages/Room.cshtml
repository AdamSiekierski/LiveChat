@page
@model LiveChat.Pages.RoomModel
@using Microsoft.AspNetCore.Identity;


@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@section Scripts {
    <script src="~/js/SignalRConn.js"></script>
    <script src="~/js/Room.js"></script>
}

@{
    ViewData["Title"] = "Room";
}

<h1>Room</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomName)
        </dd>
        <dt class="col-sm-2">
            Created by
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Admin.Email)
        </dd>
        <dt class="col-sm-2">
            Created at
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Created)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
<hr />

@if (SignInManager.IsSignedIn(User))
{
    <form id="messageForm" class="d-flex">
        <input class="col" placeholder="Type a message..." name="message" />
        <input type="hidden" value="@Html.Raw(Model.Room.ID)" name="roomId" id="roomId" />
        <button type="submit" id="sendButton">Send</button>
    </form>
}
else
{
    <p>Sign in or Log in to send messages</p>
}

<ul id="messageList">
    @foreach (var message in Model.Messages)
    {
        <li>
            <b>@Html.DisplayFor((model) => message.Author.Email): </b>
            @Html.DisplayFor(model => message.Content)
        </li>
    }
</ul>
